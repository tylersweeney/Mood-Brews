            <span class="beer-title"></span>
            <h5>Beer Description: </h5>
            <p class="description"></p>
          </div>
        </div>
      </div>

      <div class="col s6 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"></span>
            <h5>Face Scan Results: </h5>
            <div class="emotions">
              <!-- returned emotion parameters-->
              <span class="happiness"></span>
              <br>
              <span class="sadness"></span>
              <br>
              <span class="disgust"></span>
              <br>
              <span class="anger"></span>
              <br>
              <span class="surprise"></span>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>



