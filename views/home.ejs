  <!-- Page title         -->
  <h2>Find your mood Brew</h2>
  <p>Take or upload an image below to find your mood brew</p>
  <div class="row">
    <div class="buttons">
      <!-- script that handles uploadcare UI -->
      <script>
        UPLOADCARE_PUBLIC_KEY = '890c3da7eb6aeb118171';
        UPLOADCARE_TABS = 'camera file url';
